@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
            {
                <small class="navbar-text">
                    <b>Your cart:</b>
                    @Model.Lines.Sum(x => x.Quantity) item(s)
                    @Model.ComputeTotal().ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-us"))
                </small>
            }
    <a class="btn btn-default navbar-btn" href="/Purchase"><i class="fa fa-shopping-cart"></i></a>
</div>

